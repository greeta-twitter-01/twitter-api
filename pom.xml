				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.greeta.twitter</groupId>
				<artifactId>elastic-config</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.greeta.twitter</groupId>
				<artifactId>elastic-index-client</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.greeta.twitter</groupId>
