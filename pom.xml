				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.greeta.twitter</groupId>
				<artifactId>kafka-consumer</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>net.greeta.twitter</groupId>
				<artifactId>common-config</artifactId>
				<version>${project.version}</version>
